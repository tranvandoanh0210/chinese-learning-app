{
  "name": "chinese-learning-website",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build": "ng build --configuration production && cp src/404.html dist/chinese-learning-website/browser/404.html",
    "predeploy": "npm run build",
    "deploy": "npx angular-cli-ghpages --dir=dist/chinese-learning-app/browser",
    "deploy:ci": "npm run build && npx angular-cli-ghpages --dir=dist/chinese-learning-app/browser --no-silent",
    "serve:local": "ng build --base-href / && npx http-server dist/chinese-learning-app/browser -p 8080 -o",
    "build:local": "ng build --configuration production --base-href /",
    "build:gh-pages": "ng build --configuration production --base-href /chinese-learning-app/",
    "serve:gh-pages": "npm run build:gh-pages && npx http-server dist/chinese-learning-app/browser -p 8080 -o",
    "serve:dist": "ng build --configuration production && cp dist/chinese-learning-app/browser/index.html dist/chinese-learning-app/browser/404.html && npx http-server dist/chinese-learning-app/browser -p 8080 -o"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.3.0",
    "@ng-bootstrap/ng-bootstrap": "^19.0.1",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.6",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.6",
    "@angular/cli": "^20.3.6",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "angular-cli-ghpages": "^2.0.3",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}